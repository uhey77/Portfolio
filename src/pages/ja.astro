---
import Layout from '../layouts/Layout.astro';
import Navbar from '../components/Navbar.astro';
import Footer from '../components/Footer.astro';

const profileImageSrc = `${import.meta.env.BASE_URL}/top_picture.jpg`;
---

<Layout title="山田祐平 | ポートフォリオ" description="AIエンジニア / 学生 / リサーチャーとしてのポートフォリオサイト。学歴と連絡先を掲載。" lang="ja">
  <Navbar lang="ja" />

  <main class="pt-16">
    <section id="hero" class="min-h-screen flex items-center justify-center pt-16 pb-12">
      <div class="max-w-4xl mx-auto px-4 text-center">
        <img
          src={profileImageSrc}
          alt="山田祐平の写真"
          class="w-32 h-32 rounded-full mx-auto mb-8 object-cover block"
        />
        <h1 class="text-4xl md:text-6xl font-semibold mb-4 leading-tight">
          <span class="text-blue-600">山田 祐平</span>
        </h1>
        <p class="text-xl text-gray-700 mb-4">
          AI Engineer / Student
        </p>
        <div class="flex items-center justify-center gap-4 mb-8 flex-wrap">
          <a href="#contact"
            class="px-8 py-3 bg-blue-600 text-white rounded-full hover:bg-blue-700 transition-colors shadow-sm">
            お問い合わせ
          </a>
        </div>
        <div class="flex items-center justify-center gap-6 text-gray-600">
          <a href="https://github.com/uhey77" target="_blank" rel="noreferrer"
            class="hover:text-blue-600 transition-colors" aria-label="GitHub">
