---
interface Props {
  year?: number;
  name?: string;
}

const { year = new Date().getFullYear(), name = 'Yuhei Yamada' } = Astro.props;
---

<footer class="bg-gray-900 text-white py-8">
  <div class="max-w-6xl mx-auto px-4 text-center text-sm">
    <p>&copy; {year} {name}. All rights reserved.</p>
  </div>
</footer>
